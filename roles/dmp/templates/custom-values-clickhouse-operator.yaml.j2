# Default values for ClickHouse-operator
localRegistry: {{ base_repo }}
namespaceOverride: {{ namespace_override | default('') }}
watchAllNamespaces: true
enablePrometheusMonitor: true

operator:
  image: "{{ namespace_override | default('radondb') }}/chronus-operator:2.1.3"
  imagePullPolicy: IfNotPresent
metrics_operator:
  image: "{{ namespace_override | default('radondb') }}/chronus-metrics-operator:2.1.3"
  imagePullPolicy: IfNotPresent
