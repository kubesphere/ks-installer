image:
  prefix: {{ mongodb_image_prefix }}
  pullPolicy: IfNotPresent
  agent:
    name: mongodb-agent
    version: {{ mongodb_agent_image_tag }}
  versionUpgradeHook:
    name: version-hook
    version: {{ mongodb_hook_image_tag }}
  readinessProbe:
    name: readiness-probe
    version: {{ mongodb_readiness_image_tag }}
  mongodb:
    name: mongodb
  operator:
    name: mongodb-kubernetes-operator
    version: {{ mongodb_operator_image_tag }}

serviceAccount:
  # Specifies whether a service account should be created
  create: true
  # Annotations to add to the service account
  annotations: { }
  # The name of the service account to use.
  # If not set and create is true, a name is generated using the fullname template
  name: ""

rbac:
  create: true