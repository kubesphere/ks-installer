apiVersion: apps/v1
kind: Deployment
metadata:
  labels:
    app.kubernetes.io/instance: whizard-agent-proxy
    app.kubernetes.io/name: whizard-agent-proxy
  name: whizard-agent-proxy
  namespace: kubesphere-monitoring-system
spec:
  replicas: 1
  selector:
    matchLabels:
      app.kubernetes.io/instance: whizard-agent-proxy
      app.kubernetes.io/name: whizard-agent-proxy
  template:
    metadata:
      labels:
        app.kubernetes.io/instance: whizard-agent-proxy
        app.kubernetes.io/name: whizard-agent-proxy
    spec:
      containers:
      - args:
        - --gateway.address={% if multicluster.clusterRole == "host" %}http://gateway-whizard-operated.kubesphere-monitoring-system.svc:9090{% else %}{{ monitoring.whizard.client.gatewayUrl }}{% endif %}
        
        - --tenant={% if multicluster.clusterRole == "host" %}{{ multicluster.hostClusterName }}{% else %}{{ monitoring.whizard.client.clusterName }}{% endif %}

        image: {{ whizard_monitoring_agent_proxy_repo }}:{{ whizard_monitoring_agent_proxy_tag }}
        name: agent-proxy
        ports:
        - containerPort: 9090
          name: http
